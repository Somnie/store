<%= semantic_form_for [@service, @product], :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :desc %>
    <%= f.input :desc_long, :as => :text %>
    <%= f.input :img %>    
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>